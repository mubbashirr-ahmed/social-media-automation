<Window x:Class="SocialMediaAutomationTool.VIEW.Socialprofiles.popUP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialMediaAutomationTool.VIEW.Socialprofiles"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="Select Operation" Height="300" Width="400" >
    <Grid>
        
        <Border BorderThickness="1" BorderBrush="Black"/>
        <Button Content="x" VerticalAlignment="Top" Height="21" HorizontalAlignment="Right" Width="28" Background="#07908e" Click="Close"/>
        <Button Content="Delete Profile" Background="#07908e" BorderThickness="0.5" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Height="27" Width="148" Click="bDelete" />
        <Button Content="Update Profile" Background="#07908e" BorderThickness="0.5" HorizontalAlignment="Center" Margin="0,174,0,0" VerticalAlignment="Top" Height="27" Width="148" Click="bUpdate" />

    </Grid>
</Window>
